<GridPane alignment="center" hgap="10" minWidth="-Infinity" vgap="10" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ist361.LoginController">
<padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
